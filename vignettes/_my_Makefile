# make DOCUMENT=basic

DOCUMENT=regression
EDIT=gvim.exe
BROWSER=firefox.exe
RSCRIPT=Rscript.exe

all: knitr

knitr: $(DOCUMENT).Rmd
	$(RSCRIPT) -e "library(rmarkdown); rmarkdown::render('$(DOCUMENT).Rmd', 'html_document')"

view: $(DOCUMENT).html
	$(BROWSER) $(DOCUMENT).html

edit: $(DOCUMENT).Rmd
	$(EDIT) $(DOCUMENT).Rmd &

.PHONY: clean
clean:
	rm *.html
